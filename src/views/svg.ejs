<svg xmlns="http://www.w3.org/2000/svg" width="<%= imageSize %>" height="<%= imageSize %>">
  <defs>
    <style>
      :root {
        --tiley-text-color: #fff;
        --tiley-bg-color: <%= color %>;
        --tiley-font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      }

      text {
        alignment-baseline: central;
        text-anchor: middle;
        fill: var(--tiley-text-color);
        font-weight: bold;
        font-family: var(--tiley-font-family);
        font-size: <%= fontSize %>px;
        user-select: none;
      }

      rect {
        fill: var(--tiley-bg-color);
      }
    </style>
  </defs>
  <rect width="<%= imageSize %>" height="<%= imageSize %>"/>
  <text x="<%= imageSize * 0.5 %>" y="<%= imageSize * 0.5 %>"><%= text %></text>
</svg>
